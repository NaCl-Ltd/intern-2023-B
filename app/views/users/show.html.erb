<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %><%#
        %><span class="nickname"><%= @user.nickname %></span>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <p><%= t :introduction %></p>
      <p style = "overflow-wrap: break-word;">
        <%= @user.introduce %>
      </p>
      <p >
      <p><%= t(:birthplace) %></p>
        <%= @user.birthplace %>
      </p>
    </section>
    <%=link_to t( :go_my_like_post),  mylikes_user_path(@user)%>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <%= render 'shared/fixed' %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
